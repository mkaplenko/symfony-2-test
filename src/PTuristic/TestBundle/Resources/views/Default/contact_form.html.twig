{% extends 'PTuristicTestBundle::base.html.twig' %}
{% block body %}
    {% if form_errors(form) or errors %}
        <div class="alert alert-danger" role="alert">{{ form_errors(form) }}
            {% if errors %}
                {% for error in errors %}
                    {{ error }}
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
    <div class="container">
        <div class="page-header">
            <h1>Contact form.
                <small><a href="{{ path('p_turistic_test_homepage') }}">Go back.</a></small>
            </h1>
        </div>
        <form class="form-horizontal" action="{{ path('p_turistic_test_form') }}" method="POST">
            {{ form_row(form._token) }}
            <div class="form-group">
                {{ form_label(form.first_name, 'First Name', {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Input your name' }}
                    ) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.last_name, 'Last Name', {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Input your surname' }}
                    ) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.company, 'Company', {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.company, {'attr': {'class': 'form-control', 'placeholder': 'Input your company name' }}
                    ) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'E-Mail', {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Input your e-mail address' }}
                    ) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                <div class="col-sm-5">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Input your message' }}
                    ) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit form</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}